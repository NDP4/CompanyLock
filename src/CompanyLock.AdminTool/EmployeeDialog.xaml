<Window x:Class="CompanyLock.AdminTool.EmployeeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Details" Height="400" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Username:" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Name="UsernameTextBox" Margin="0,0,0,10" Padding="5"/>
        
        <Label Grid.Row="2" Content="Full Name:"/>
        <TextBox Grid.Row="3" Name="FullNameTextBox" Margin="0,0,0,10" Padding="5"/>
        
        <Label Grid.Row="4" Content="Department:"/>
        <TextBox Grid.Row="5" Name="DepartmentTextBox" Margin="0,0,0,10" Padding="5"/>
        
        <Grid Grid.Row="6" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <Label Content="Role:"/>
                <ComboBox Name="RoleComboBox" Padding="5">
                    <ComboBoxItem Content="User"/>
                    <ComboBoxItem Content="Admin"/>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Grid.Column="1">
                <Label Content="Status:"/>
                <CheckBox Name="IsActiveCheckBox" Content="Active" VerticalAlignment="Center" Margin="5"/>
            </StackPanel>
        </Grid>
        
        <Expander Grid.Row="7" Header="Change Password" Margin="0,10,0,10">
            <StackPanel Margin="10">
                <Label Content="New Password:"/>
                <PasswordBox Name="PasswordBox" Margin="0,0,0,10" Padding="5"/>
                <Label Content="Confirm Password:"/>
                <PasswordBox Name="ConfirmPasswordBox" Padding="5"/>
            </StackPanel>
        </Expander>
        
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="SaveButton" Content="Save" Padding="20,8" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Padding="20,8" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>