<Window x:Class="CompanyLock.UI.LockScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CompanyLock Security"
        WindowState="Maximized"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="Transparent"
        KeyDown="Window_KeyDown">
    
    <Window.Resources>
        <!-- Glassmorphism Card Style - Enhanced -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Color="#60FFFFFF" Offset="0"/>
                        <GradientStop Color="#30FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.3" ShadowDepth="12" BlurRadius="48"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Input Style - Fixed Text Visibility -->
        <Style x:Key="ModernInput" TargetType="Control">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="42"/>
        </Style>
        
        <!-- Glassmorphism Button Style - Enhanced -->
        <Style x:Key="GlassButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#6000D4FF" Offset="0"/>
                        <GradientStop Color="#3000AAFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#8000D4FF"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.15" ShadowDepth="4" BlurRadius="16"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#8000D4FF" Offset="0"/>
                                            <GradientStop Color="#5000AAFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#4000AAFF" Offset="0"/>
                                            <GradientStop Color="#2000D4FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Simple TextBox Style - Default Windows Style -->
        <Style x:Key="GlassTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        
        <!-- Simple PasswordBox Style - Default Windows Style -->
        <Style x:Key="GlassPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </Window.Resources>
    
    <!-- Dynamic Background with Gradient and Blur Effect -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A0D2E" Offset="0"/>
                <GradientStop Color="#16213E" Offset="0.3"/>
                <GradientStop Color="#0F3460" Offset="0.7"/>
                <GradientStop Color="#533A71" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!-- Animated Background Elements -->
        <Canvas>
            <!-- Floating Circles for Visual Interest -->
            <Ellipse Width="200" Height="200" Canvas.Left="100" Canvas.Top="100" Opacity="0.12">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#6000D4FF" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="300" Height="300" Canvas.Right="150" Canvas.Bottom="200" Opacity="0.1">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#60FF6B9D" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <!-- Additional floating elements -->
            <Ellipse Width="150" Height="150" Canvas.Right="50" Canvas.Top="150" Opacity="0.08">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#4000E4AA" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="120" Height="120" Canvas.Left="200" Canvas.Bottom="100" Opacity="0.1">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#50AA44FF" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <StackPanel Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,24">
                <!-- Lock Icon with Glow Effect -->
                <Grid Margin="0,0,0,16">
                    <Ellipse Width="80" Height="80" Opacity="0.2">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#8000D4FF" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="ðŸ”’" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="#00D4FF"/>
                </Grid>
                
                <!-- Company Title -->
                <TextBlock Text="CompanyLock" 
                           FontSize="36" 
                           FontWeight="Light" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,6">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.3" ShadowDepth="2" BlurRadius="8"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <!-- Subtitle -->
                <TextBlock Text="Enterprise Security System" 
                           FontSize="14" 
                           FontWeight="Light"
                           Foreground="#B0B0B0" 
                           HorizontalAlignment="Center" 
                           Opacity="0.8"/>
            </StackPanel>
            
            <!-- Main Login Card -->
            <Border Grid.Row="1" 
                    Style="{StaticResource GlassCard}"
                    MaxWidth="380"
                    HorizontalAlignment="Center"
                    Padding="28,24">
                
                <StackPanel>
                    <!-- Login Header -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Secure Authentication" 
                                   FontSize="20" 
                                   FontWeight="Medium" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Enter your credentials to unlock this workstation" 
                                   FontSize="12" 
                                   Foreground="#B0B0B0" 
                                   HorizontalAlignment="Center" 
                                   TextWrapping="Wrap"
                                   Opacity="0.9"/>
                    </StackPanel>
                    
                    <!-- Username Field -->
                    <StackPanel Margin="0,0,0,14">
                        <TextBlock Text="Username" 
                                   FontSize="12" 
                                   FontWeight="Medium" 
                                   Foreground="White" 
                                   Margin="2,0,0,4" 
                                   Opacity="0.9"/>
                        <TextBox Name="UsernameTextBox" 
                                 Style="{StaticResource GlassTextBox}"
                                 KeyDown="UsernameTextBox_KeyDown"
                                 TabIndex="1"/>
                    </StackPanel>
                    
                    <!-- Password Field -->
                    <StackPanel Margin="0,0,0,14">
                        <TextBlock Text="Password" 
                                   FontSize="12" 
                                   FontWeight="Medium" 
                                   Foreground="White" 
                                   Margin="2,0,0,4" 
                                   Opacity="0.9"/>
                        <PasswordBox Name="PasswordBox" 
                                     Style="{StaticResource GlassPasswordBox}"
                                     KeyDown="PasswordBox_KeyDown"
                                     TabIndex="2"/>
                    </StackPanel>
                    
                    <!-- Unlock Button -->
                    <Button Name="UnlockButton" 
                            Content="ðŸ”“ UNLOCK WORKSTATION" 
                            Style="{StaticResource GlassButton}"
                            Click="UnlockButton_Click"
                            Margin="0,4,0,10"
                            TabIndex="3"/>
                    
                    <!-- Error Message -->
                    <Border Name="ErrorPanel" 
                            Background="#40FF4444" 
                            BorderBrush="#60FF4444" 
                            BorderThickness="1" 
                            CornerRadius="6" 
                            Padding="12,8" 
                            Margin="0,0,0,12"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Name="ErrorMessage" 
                                       Text="" 
                                       Foreground="White" 
                                       FontSize="13" 
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Message -->
                    <TextBlock Name="StatusMessage" 
                               Text="System is secured. Authentication required." 
                               Foreground="#90B0B0B0" 
                               FontSize="11" 
                               HorizontalAlignment="Center" 
                               TextWrapping="Wrap"
                               Opacity="0.8"/>
                </StackPanel>
            </Border>
            
            <!-- Footer Information -->
            <StackPanel Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
                <!-- Time Display -->
                <Border Style="{StaticResource GlassCard}" 
                        Padding="20,12" 
                        Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- <TextBlock Text="ðŸ•’" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/> -->
                        <StackPanel>
                            <TextBlock Name="TimeDisplay" 
                                       Text="" 
                                       FontSize="16" 
                                       FontWeight="Medium"
                                       Foreground="White" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Name="DateDisplay" 
                                       Text="" 
                                       FontSize="12" 
                                       Foreground="#B0B0B0" 
                                       HorizontalAlignment="Center"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Help Information -->
                <StackPanel>
                    <TextBlock Text="ðŸ’¡ Press Ctrl+Alt+Del for additional options" 
                               FontSize="11" 
                               Foreground="#80B0B0B0" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,3"/>
                    <TextBlock Text="ðŸ›¡ï¸ This workstation is protected by CompanyLock Security" 
                               FontSize="10" 
                               Foreground="#60B0B0B0" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>